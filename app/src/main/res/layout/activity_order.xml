<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.OrderActivity" android:background="@color/background" android:focusable="false">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:id="@+id/editableCV"
            app:layout_constraintHorizontal_bias="0.0"
            app:cardElevation="4dp"
            app:cardCornerRadius="2dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" android:focusable="false">
        <android.support.constraint.ConstraintLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_gravity="end"
                android:focusable="false">

            <AutoCompleteTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/autoCompleteTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:hint="Item Name"
                    android:fontFamily="@font/roboto"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:paddingStart="8dp"
                    android:focusable="true"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editableCV"
            android:focusable="false">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemsLinLay" android:padding="8dp"
                android:layout_marginTop="8dp"
                android:focusable="false">
        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_done_white_24dp"
            android:id="@+id/doneOrderFAB" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:focusable="false"/>
</android.support.constraint.ConstraintLayout>