<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp" android:id="@+id/doneCV"
        app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" app:cardElevation="0dp">
    <android.support.constraint.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="end"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemNameTV" android:layout_margin="4dp"
                android:singleLine="false" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside" tools:text="Paracetamol"
                android:gravity="start" android:textSize="18sp"
                android:fontFamily="@font/roboto_medium" android:textColor="#333333" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/quantityTV"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quantityTV" android:layout_margin="4dp"
                android:singleLine="false"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                android:gravity="center_horizontal" android:textSize="18sp"
                android:fontFamily="@font/roboto" tools:text="5" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/itemNameTV"
                app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>