<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".activities.AboutActivity" android:background="@color/background">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:fitsSystemWindows="true"
            android:layout_height="@dimen/app_bar_height"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:toolbarId="@+id/toolbar"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="?attr/colorPrimary">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.PopupOverlay"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_login_white"
                    android:id="@+id/imageView10" android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView2" tools:text="Mustafa M. Dakhel"
                    android:textColor="@color/background" android:textSize="24sp"
                    android:fontFamily="@font/roboto_medium" android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"/>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
            tools:context=".activities.FullDetailsActivity" android:layout_marginTop="24dp"
            android:id="@+id/constraintLayout4" android:background="@color/background">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="16dp" app:contentPadding="4dp" android:id="@+id/cardView4">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@+id/aboutSupTV"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/AboutTV"
                        android:layout_marginBottom="8dp" android:id="@+id/cardView2">
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_dialog_email"
                                android:id="@+id/imageView11" android:layout_marginTop="8dp"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:scaleX="0.5" android:scaleY="0.5"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintBottom_toTopOf="@+id/imageView12"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@android:drawable/stat_sys_speakerphone" android:id="@+id/imageView12"
                                app:layout_constraintTop_toBottomOf="@+id/imageView11"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintBottom_toTopOf="@+id/imageView14" android:layout_marginTop="8dp"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_type"
                                android:id="@+id/imageView14"
                                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView12"
                                app:layout_constraintBottom_toTopOf="@+id/imageView15"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginBottom="8dp" android:scaleX="0.9" android:scaleY="0.9"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_supervisor"
                                android:id="@+id/imageView15"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView14"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginBottom="8dp" android:scaleX="0.9" android:scaleY="0.9"/>
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/AboutTV" tools:text="About"
                        android:textSize="24sp" android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/roboto_bold" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"/>
                <TextView
                        android:text="mstfdakhel@gmail.com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/email"
                        app:layout_constraintStart_toEndOf="@+id/cardView2" android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="@+id/cardView2"
                        app:layout_constraintBottom_toTopOf="@+id/phone" android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto" android:textColor="#505050"/>
                <TextView
                        android:text="07800000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/phone"
                        app:layout_constraintTop_toBottomOf="@+id/email"
                        app:layout_constraintStart_toEndOf="@+id/cardView2" android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/type"
                        android:layout_marginTop="8dp" android:fontFamily="@font/roboto" android:textColor="#505050"/>
                <TextView
                        android:text="Trade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/type"
                        app:layout_constraintTop_toBottomOf="@+id/phone"
                        app:layout_constraintStart_toEndOf="@+id/cardView2" android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/sup" android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp" android:fontFamily="@font/roboto" android:textColor="#505050"/>
                <TextView
                        android:text="Ahmed Ali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/sup"
                        app:layout_constraintTop_toBottomOf="@+id/type"
                        app:layout_constraintStart_toEndOf="@+id/cardView2" android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/cardView2" android:layout_marginBottom="8dp"
                        android:fontFamily="@font/roboto" android:textColor="#505050"/>
                <TextView
                        android:text="Email:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/aboutEmailTV"
                        app:layout_constraintTop_toBottomOf="@+id/AboutTV" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/aboutPhoneTV" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="@+id/cardView2" android:fontFamily="@font/roboto_medium"
                        android:textColor="#505050"/>
                <TextView
                        android:text="Phone:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/aboutPhoneTV"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/aboutEmailTV"
                        app:layout_constraintBottom_toTopOf="@+id/aboutTypeTV"
                        android:fontFamily="@font/roboto_medium" android:textColor="#505050"/>
                <TextView
                        android:text="Type:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/aboutTypeTV"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/aboutPhoneTV"
                        app:layout_constraintBottom_toTopOf="@+id/aboutSupTV" android:fontFamily="@font/roboto_medium"
                        android:textColor="#505050"/>
                <TextView
                        android:text="Supervisor:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/aboutSupTV"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/aboutTypeTV"
                        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
                        android:layout_marginBottom="8dp" android:fontFamily="@font/roboto_medium"
                        android:textColor="#505050"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" app:cardCornerRadius="16dp" app:contentPadding="4dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cardView4">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/areaTV" tools:text="Areas"
                        android:textSize="24sp" android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/roboto_bold" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_place_black_24dp"
                        android:id="@+id/imageView16" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/areaTV" android:scaleX="2" android:scaleY="2"
                        android:layout_marginTop="16dp" android:tint="@color/colorPrimary" app:tintMode="src_over"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/area1"
                        app:layout_constraintStart_toEndOf="@+id/imageView16" android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@+id/imageView16"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView16" tools:text="Bayaa"
                        android:fontFamily="@font/roboto_medium" android:textColor="#505050" android:textSize="24sp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_place_black_24dp"
                        android:id="@+id/imageView17" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:scaleX="2" android:scaleY="2"
                        app:layout_constraintTop_toBottomOf="@+id/imageView16" android:layout_marginTop="24dp"
                        android:tint="@color/colorPrimary" app:tintMode="src_over"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/area2"
                        app:layout_constraintStart_toEndOf="@+id/imageView17" android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@+id/imageView17"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView17" tools:text="Karrada"
                        android:fontFamily="@font/roboto_medium" android:textColor="#505050" android:textSize="24sp"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>