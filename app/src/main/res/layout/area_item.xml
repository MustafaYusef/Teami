<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp" app:contentPadding="4dp"
        android:id="@+id/cardView3" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/areaTV" xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
                android:layout_width="12dp"
                android:layout_height="48dp"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toEndOf="@+id/imageView16"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/cardView6"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_area"
                android:id="@+id/imageView16" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                android:scaleX="2" android:scaleY="2"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/areaTV"
                app:layout_constraintTop_toTopOf="@+id/imageView16"
                app:layout_constraintBottom_toBottomOf="@+id/imageView16" tools:text="البياع"
                android:fontFamily="@font/roboto_medium" android:textColor="#505050" android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/cardView6" android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>