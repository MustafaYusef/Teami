<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".activities.AboutActivity" android:background="@color/background"
        android:id="@+id/coordinatorLayout2">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="@string/add"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:id="@+id/finishAddBtn"
                android:background="@drawable/rounded_btn_shape"
                android:textColor="@color/background"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"/>
        <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:fitsSystemWindows="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:theme="@style/AppTheme.AppBarOverlay" android:background="@drawable/ic_subtraction_1"
        >

            <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/toolbar_layout"
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:toolbarId="@+id/toolbar"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:contentScrim="?attr/colorPrimary">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal|top" android:layout_marginBottom="32dp">
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_doctor_bg"
                            android:id="@+id/imageView"/>
                    <EditText
                            android:layout_width="300dp"
                            android:layout_height="32dp"
                            android:inputType="textPersonName"
                            android:digits="ءآأؤإئابةتثجحخدذرزسشصضطظعغـفقكلمنهوىي ً ٌ ٍ َ ُ ِ ّ ْ ٓ ٔ ٕﷵﷶﷷﷸﷹٮٯ ٰٱٲٳٴٵٶٷٸٹٺٻټٽپٿڀځڂڃڄڅچڇڈډڊڋڌڍڎڏڐڑڒړڔڕږڗژڙښڛڜڝڞڟڠڡڢڣڤڥڦڧڨکڪګڬڭڮگڰڱڲڳڴڵڶڷڸڹںڻڼڽھڿۀہۂۃۄۅۆۇۈۉۊۋیۍێۏېۑےۓ۔ەۖۗ ۘ ۙ ۚ ۛ ۜ۟۠ ۡ ۢ ۣ ۤ ۥ ۦ ۧ ۨ ۪ ۫ ۬ ۭۺۻۼ۽۾ﹰﹱﹲﹴﹶﹷﹸﹹﹺﹻﹼﹽﹾﹿﺀﺁﺂﺃﺄﺅﺆﺇﺈﺉﺊﺋﺌﺍﺎﺏﺐﺑﺒﺓﺔﺕﺖﺗﺘﺙﺚﺛﺜﺝﺞﺟﺠﺡﺢﺣﺤﺥﺦﺧﺨﺩﺪﺫﺬﺭﺮﺯﺰﺱﺲﺳﺴﺵﺶﺷﺸﺹﺺﺻﺼﺽﺾﺿﻀﻁﻂﻃﻄﻅﻆﻇﻈﻉﻊﻋﻌﻍﻎﻏﻐﻑﻒﻓﻔﻕﻖﻗﻘﻙﻚﻛﻜﻝﻞﻟﻠﻡﻢﻣﻤﻥﻦﻧﻨﻩﻪﻫﻬﻭﻮﻯﻰﻱﻲﻵﻶﻷﻸﻹﻺﻻﻼ"
                            android:ems="10"
                            android:id="@+id/addDocNameTV" android:background="@drawable/edittext_normal"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:hint="@string/name" android:layout_marginTop="8dp"
                            android:textColor="#666666"
                            android:textColorHint="#999999" android:layout_marginBottom="8dp"/>
                    <Spinner
                            android:layout_width="308dp"
                            android:layout_height="38dp"
                            android:id="@+id/addSpecialitySpinner"
                            android:layout_marginEnd="16sp"
                            android:popupBackground="@android:color/white"
                            android:layout_marginStart="16sp"
                            android:layout_marginBottom="16dp"
                            android:layout_gravity="center_horizontal"
                            android:paddingEnd="8dp" android:paddingStart="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@android:style/Widget.Spinner"
                    />
                </LinearLayout>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".activities.AddPharmacy" android:layout_gravity="bottom"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/app_bar"
                android:id="@+id/constraintLayout2">
            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="14dp" android:id="@+id/cardView5"
                    android:layout_margin="8dp"
            >
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                >

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_area"
                            android:id="@+id/locationIV" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"
                            android:scaleX="2" android:scaleY="2"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    <android.support.v7.widget.CardView
                            android:layout_width="12dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@+id/locationIV"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="3dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/breakerCV"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"/>
                    <Spinner
                            android:layout_width="300dp"
                            android:layout_height="32dp"
                            android:id="@+id/addRegionSpinner"
                            android:layout_marginEnd="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginStart="8dp"
                            android:popupBackground="@android:color/white"
                            app:layout_constraintTop_toBottomOf="@+id/addOrganiztionSpinner"
                            android:layout_marginTop="16dp"
                            android:layout_gravity="center_horizontal" android:paddingEnd="8dp"
                            android:paddingStart="8dp" app:layout_constraintStart_toEndOf="@+id/breakerCV"/>

                    <EditText
                            android:layout_width="300dp"
                            android:layout_height="32dp"
                            android:digits="ءآأؤإئابةتثجحخدذرزسشصضطظعغـفقكلمنهوىي ً ٌ ٍ َ ُ ِ ّ ْ ٓ ٔ ٕﷵﷶﷷﷸﷹٮٯ ٰٱٲٳٴٵٶٷٸٹٺٻټٽپٿڀځڂڃڄڅچڇڈډڊڋڌڍڎڏڐڑڒړڔڕږڗژڙښڛڜڝڞڟڠڡڢڣڤڥڦڧڨکڪګڬڭڮگڰڱڲڳڴڵڶڷڸڹںڻڼڽھڿۀہۂۃۄۅۆۇۈۉۊۋیۍێۏېۑےۓ۔ەۖۗ ۘ ۙ ۚ ۛ ۜ۟۠ ۡ ۢ ۣ ۤ ۥ ۦ ۧ ۨ ۪ ۫ ۬ ۭۺۻۼ۽۾ﹰﹱﹲﹴﹶﹷﹸﹹﹺﹻﹼﹽﹾﹿﺀﺁﺂﺃﺄﺅﺆﺇﺈﺉﺊﺋﺌﺍﺎﺏﺐﺑﺒﺓﺔﺕﺖﺗﺘﺙﺚﺛﺜﺝﺞﺟﺠﺡﺢﺣﺤﺥﺦﺧﺨﺩﺪﺫﺬﺭﺮﺯﺰﺱﺲﺳﺴﺵﺶﺷﺸﺹﺺﺻﺼﺽﺾﺿﻀﻁﻂﻃﻄﻅﻆﻇﻈﻉﻊﻋﻌﻍﻎﻏﻐﻑﻒﻓﻔﻕﻖﻗﻘﻙﻚﻛﻜﻝﻞﻟﻠﻡﻢﻣﻤﻥﻦﻧﻨﻩﻪﻫﻬﻭﻮﻯﻰﻱﻲﻵﻶﻷﻸﻹﻺﻻﻼ"
                            android:id="@+id/addStreetET"
                            android:layout_marginEnd="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:background="@drawable/edittext_normal"
                            android:layout_marginTop="16sp"
                            app:layout_constraintTop_toBottomOf="@+id/addRegionSpinner"
                            android:inputType="" android:hint="@string/street"
                            android:layout_gravity="center_horizontal" android:paddingEnd="8dp"
                            android:paddingStart="8dp" app:layout_constraintStart_toEndOf="@+id/breakerCV"
                            android:layout_marginStart="8dp"/>

                    <Spinner
                            android:layout_width="300dp"
                            android:layout_height="32dp"
                            android:id="@+id/addHospitalSpinner"
                            android:layout_marginEnd="16sp"
                            android:popupBackground="@android:color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16sp"
                            app:layout_constraintTop_toBottomOf="@+id/addStreetET"
                            android:layout_gravity="center_horizontal"
                            android:paddingEnd="8dp" android:paddingStart="8dp"
                            app:layout_constraintStart_toEndOf="@+id/breakerCV" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    <Spinner
                            android:layout_width="300dp"
                            android:layout_height="32dp"
                            android:id="@+id/addOrganiztionSpinner"
                            android:layout_marginEnd="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginStart="8dp"
                            android:popupBackground="@android:color/white"
                            android:layout_gravity="center_horizontal"
                            android:paddingEnd="8dp" android:paddingStart="8dp" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/breakerCV"/>

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardView5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardCornerRadius="14dp" android:id="@+id/cardView10"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="8dp" android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                >

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_clock_purple"
                            android:id="@+id/workIV" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:scaleX="2" android:scaleY="2"/>
                    <android.support.v7.widget.CardView
                            android:layout_width="12dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@+id/workIV"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="3dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/workBreakerCV"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>

                    <Spinner
                            android:layout_width="300dp"
                            android:layout_height="32dp"
                            android:id="@+id/workSpinner"
                            android:layout_marginEnd="16sp"
                            android:popupBackground="@android:color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center_horizontal" android:paddingEnd="8dp"
                            android:paddingStart="8dp" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/workBreakerCV" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"/>

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>