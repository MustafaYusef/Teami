<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="@color/background">
    <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_height="300dp"
            android:layout_width="match_parent">
        <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:toolbarId="@+id/toolbar"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
                app:contentScrim="?attr/colorPrimary">
            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    app:layout_collapseMode="pin"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent">
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <ImageView
            android:id="@+id/app_bar_image2"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            app:layout_collapseMode="pin"
            android:src="@drawable/ic_subtraction_1"
            android:scaleType="fitXY" android:foregroundGravity="top" android:layout_gravity="top"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imageView2"
            app:layout_collapseMode="pin"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/ic_login" android:layout_gravity="center|top"
            android:foregroundGravity="center" android:layout_marginBottom="8dp"
            android:layout_marginTop="32dp"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_overlapTop="48dp"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
            tools:context=".activities.LoginActivity"
    >

        <Button
                android:text="@string/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/loginBtn"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" style="@style/Base.Widget.AppCompat.Button.Colored"
                android:background="@drawable/rounded_btn_shape" android:textSize="18sp"
                android:translationZ="16dp"
                android:paddingEnd="64dp"
                android:paddingStart="64dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView"
                app:layout_constraintBottom_toBottomOf="@+id/cardView"/>
        <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/cardView"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp" app:layout_constraintVertical_bias="0.0"
                app:cardBackgroundColor="@android:color/transparent" app:contentPadding="0dp"
                app:cardMaxElevation="0dp" android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
            <ImageView
                    android:elevation="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:src="@drawable/ic_group_1"
                    android:id="@+id/imageView5" android:scaleType="fitXY"/>
            <android.support.constraint.ConstraintLayout
                    android:elevation="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/constraintLayout"
                    android:paddingEnd="32dp"
                    android:paddingStart="32dp" android:paddingBottom="24dp" android:paddingTop="24dp">
                <TextView
                        android:text="@string/loginTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/loginTV"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/cardview_dark_background" android:textStyle="bold"
                        android:textSize="20dp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        android:layout_marginTop="8dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:src="@drawable/ic_username"
                        android:id="@+id/imageView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/emailET"
                        app:layout_constraintTop_toTopOf="@+id/emailET"
                        app:layout_constraintEnd_toStartOf="@+id/emailET"
                        android:scaleType="fitCenter"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:src="@drawable/ic_password"
                        android:id="@+id/imageView3"
                        app:layout_constraintBottom_toBottomOf="@+id/textInput"
                        app:layout_constraintTop_toTopOf="@+id/textInput"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.0" android:scaleType="fitCenter"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/emailET" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/edittext_selector_bg" android:padding="12dp"
                        android:layout_marginTop="32dp"
                        android:hint="@string/usernameHint" app:layout_constraintTop_toBottomOf="@+id/loginTV"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/imageView"/>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInput"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/colorAccent"
                        app:layout_constraintTop_toBottomOf="@+id/emailET"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="48dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_selector_bg"
                        android:foregroundGravity="center_vertical"
                        android:gravity="center_vertical"
                        app:hintAnimationEnabled="false"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat" app:hintEnabled="false">
                    <EditText
                            android:layout_width="match_parent"
                            android:inputType="textPassword"
                            android:ems="10"
                            android:id="@+id/passwordET"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent" android:hint="@string/passwordHint"
                            android:layout_marginStart="12dp" android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>