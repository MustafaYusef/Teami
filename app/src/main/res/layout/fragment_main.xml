<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ProfileActivity"
        android:background="@color/background"
        android:theme="@style/splashScreenTheme"
        android:id="@+id/coordinatorLayout2">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:id="@+id/errorLayout"
                android:visibility="invisible"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/resourcesRefresh"
                app:layout_constraintVertical_bias="0.29000002">

            <TextView
                    android:text="@string/something_happened"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/errorTV"
                    android:textSize="20sp"
                    android:fontFamily="@font/cairo_semibold"
                    android:gravity="center_horizontal"
                    android:foregroundGravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/errorIV"
                    app:layout_constraintBottom_toTopOf="@+id/errorDescTV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            />
            <TextView
                    android:text="@string/check_connection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/errorDescTV"
                    android:gravity="center"
                    android:fontFamily="@font/cairo_light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/errorTV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_error"
                    android:id="@+id/errorIV"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/errorTV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:id="@+id/emptyListLayout"
                android:visibility="invisible"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/resourcesRefresh"
                app:layout_constraintVertical_bias="0.29000002">

            <TextView
                    android:text="@string/the_list_is_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/emptyTV"
                    android:textSize="20sp"
                    android:fontFamily="@font/cairo_semibold"
                    android:gravity="center_horizontal"
                    android:foregroundGravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/imageView5"
                    app:layout_constraintBottom_toTopOf="@+id/emptyDescTV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            />
            <TextView
                    android:text="@string/empty_list_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/emptyDescTV"
                    android:gravity="center"
                    android:fontFamily="@font/cairo_light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emptyTV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_list_grey"
                    android:id="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/emptyTV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            />
        </android.support.constraint.ConstraintLayout>
        <android.support.v4.widget.SwipeRefreshLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/resourcesRefresh"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingTop="12dp"
                android:layout_marginTop="52dp">
            <android.support.v7.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/resourcesRV"

            />
        </android.support.v4.widget.SwipeRefreshLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/ic_subtraction_1"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:id="@+id/frameLayout"
        >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_person_white_24dp"
                    android:id="@+id/profileIV"
                    android:foreground="?actionBarItemBackground"
                    android:scaleY="1.2"
                    android:scaleX="1.2"
                    android:layout_gravity="start|top"
                    android:paddingBottom="10dp"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:paddingTop="10dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_logo"
                    android:id="@+id/imageView13"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:scaleX="2"
                    android:scaleY="2"
                    android:paddingTop="8dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"/>
        </FrameLayout>

    </android.support.constraint.ConstraintLayout>
    <View android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#22000000"
          android:visibility="gone"
          android:id="@+id/dimView"/>
    <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/pink_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_add_white_24dp"
            app:fab_labelStyle="@style/AppTheme.Fab"
            app:fab_addButtonStrokeVisible="true"
            app:fab_addButtonColorNormal="@color/colorAccent"
            app:fab_addButtonColorPressed="@color/colorAccentDark"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">
        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/addDocFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_title="@string/newDoc"
                app:fab_size="mini"
                app:fab_icon="@drawable/ic_doctor"
                app:rippleColor="@color/colorAccentDark"
                app:fab_colorNormal="@color/colorAccent"
                app:fab_colorPressed="@color/colorAccentDark"
        />
        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/addPharmFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_title="@string/newPharm"
                app:fab_size="mini"
                app:fab_icon="@drawable/ic_pharmacy"
                app:rippleColor="@color/colorAccentDark"
                app:fab_colorNormal="@color/colorAccent"
                app:fab_colorPressed="@color/colorAccentDark"
        />
    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</android.support.design.widget.CoordinatorLayout>