<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".activities.ProfileActivity" android:background="@color/background"
        android:id="@+id/coordinatorLayout2">
    <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/pink_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_add_white_24dp"
            app:fab_labelStyle="@style/AppTheme.Fab"
            app:fab_addButtonColorNormal="@color/colorAccent"
            app:fab_addButtonColorPressed="@color/colorAccentDark"
            android:layout_gravity="bottom|right" android:layout_marginRight="24dp" android:layout_marginBottom="32dp">
        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/addDocFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_title="@string/new_doc"
                app:fab_size="mini"
                app:fab_icon="@drawable/ic_doctor_black"
                app:rippleColor="@color/colorAccentDark"
                app:fab_colorNormal="@color/colorAccent"
                app:fab_colorPressed="@color/colorAccent"
        />
        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/addPharmFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_title="@string/new_pharm"
                app:fab_size="mini"
                app:fab_icon="@drawable/ic_pharmacy"
                app:rippleColor="@color/colorAccentDark"
                app:fab_colorNormal="@color/colorAccent"
                app:fab_colorPressed="@color/colorAccent"
        />
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:fitsSystemWindows="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:theme="@style/AppTheme.AppBarOverlay" android:background="@drawable/ic_subtraction_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/toolbar_layout"
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:toolbarId="@+id/toolbar"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:contentScrim="?attr/colorPrimary">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal|top" android:layout_marginBottom="32dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_person_white_24dp"
                            android:id="@+id/profileIV"
                            android:layout_marginEnd="8dp" android:scaleY="1.2" android:scaleX="1.2"
                            android:layout_marginBottom="8dp" android:layout_gravity="start"
                            android:layout_marginStart="8dp"/>
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:cardCornerRadius="8dp" android:id="@+id/detailsCV"
                app:cardElevation="6dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/app_bar">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:paddingEnd="8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/doctorNameTV"
                        app:layout_constraintStart_toEndOf="@id/docInfoCV"
                        app:layout_constraintTop_toTopOf="@+id/docInfoCV"
                        app:layout_constraintBottom_toTopOf="@+id/doctorAddressTV"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="#404040" android:textSize="18sp" tools:text="Jaafar Alaa"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/doctorAddressTV"
                        app:layout_constraintStart_toEndOf="@+id/docInfoCV"
                        app:layout_constraintTop_toBottomOf="@+id/doctorNameTV"
                        app:layout_constraintBottom_toTopOf="@+id/doctorStreetTV" android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto" android:textColor="#505050" android:textSize="18sp"
                        tools:text="Bayaa"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/doctorStreetTV"
                        app:layout_constraintStart_toEndOf="@id/docInfoCV"
                        app:layout_constraintBottom_toTopOf="@+id/textView"
                        app:layout_constraintTop_toBottomOf="@+id/doctorAddressTV"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto" android:textColor="#404040" android:textSize="18sp"
                        tools:text="20 St."/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView"
                        app:layout_constraintStart_toEndOf="@id/docInfoCV"
                        app:layout_constraintTop_toBottomOf="@+id/doctorStreetTV"
                        app:layout_constraintBottom_toBottomOf="@+id/docInfoCV" android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto" android:textColor="#404040" android:textSize="18sp"
                        tools:text="Building Name"/>
                <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp" android:id="@+id/docInfoCV"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        app:cardBackgroundColor="@color/colorPrimary" app:cardCornerRadius="4dp"
                        app:cardElevation="2dp" app:contentPaddingLeft="3dp" app:contentPaddingRight="3dp"
                        app:layout_constraintStart_toEndOf="@+id/distanceTV" android:layout_marginStart="16dp">
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <ImageView
                                android:src="@drawable/ic_doctor_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/doctorIV"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintBottom_toTopOf="@+id/addressIV"/>
                        <ImageView
                                android:src="@drawable/ic_address_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/addressIV"
                                app:layout_constraintTop_toBottomOf="@+id/doctorIV"
                                app:layout_constraintBottom_toTopOf="@+id/streetIV"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>
                        <ImageView
                                android:src="@drawable/ic_street_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/streetIV"
                                app:layout_constraintBottom_toTopOf="@+id/buildingIV"
                                app:layout_constraintTop_toBottomOf="@+id/addressIV"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>
                        <ImageView
                                android:src="@drawable/ic_building_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/buildingIV"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/streetIV"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/distanceTV"
                        tools:text="10 KM"
                        app:layout_constraintStart_toStartOf="@+id/imageView4"
                        app:layout_constraintEnd_toEndOf="@+id/imageView4" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/roboto_light"
                        android:textSize="12sp"/>
                <ImageView
                        android:src="@drawable/ic_place_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/imageView6"
                        app:layout_constraintBottom_toTopOf="@+id/imageView4"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                        app:layout_constraintVertical_bias="0.0"
                        android:scaleX="1.2" android:scaleY="1.2"
                        app:layout_constraintVertical_chainStyle="spread_inside"
                        app:layout_constraintTop_toBottomOf="@+id/distanceTV"/>
                <ImageView
                        android:layout_width="4dp"
                        android:layout_height="0dp" android:id="@+id/imageView7"
                        app:layout_constraintEnd_toEndOf="@+id/imageView6"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageView4"
                        app:layout_constraintTop_toBottomOf="@+id/imageView6"
                        app:layout_constraintStart_toStartOf="@+id/imageView6"
                        android:layout_marginTop="8dp" app:srcCompat="@drawable/dash_drawable"
                        android:scaleType="fitXY"/>
                <ImageView
                        android:src="@drawable/ic_not_available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/imageView4"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                        app:tintMode="src_in"
                        app:layout_constraintTop_toBottomOf="@+id/imageView6"
                        app:layout_constraintVertical_chainStyle="spread_inside" android:scaleX="1.2"
                        android:scaleY="1.2" android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>